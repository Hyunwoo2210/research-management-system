generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 데이터 모델 정의
model Note {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Paper {
  id          Int       @id @default(autoincrement())
  title       String
  authors     String
  year        Int
  publisher   String?
  notes       String?
  filePath    String?
  fileName    String?
  fileSize    String?
  createdAt   DateTime  @default(now())
  projects    Project[] @relation("PaperToProject")
}

model Project {
  id          Int        @id @default(autoincrement())
  projectName String
  description String?
  createdAt   DateTime   @default(now())
  tasks       Task[]
  papers      Paper[]    @relation("PaperToProject")
  experts     Expert[]   @relation("ExpertToProject")
  materials   Material[] @relation("MaterialToProject")
}

model Task {
  id                 Int       @id @default(autoincrement())
  taskName           String
  description        String?
  dueDate            DateTime?
  status             String    @default("pending")
  createdAt          DateTime  @default(now())
  notifications      Boolean   @default(false)
  notificationTiming String?
  project            Project   @relation(fields: [projectId], references: [id])
  projectId          Int
}

model Achievement {
  id              Int      @id @default(autoincrement())
  title           String
  achievementDate DateTime
  description     String?
  type            String
  createdAt       DateTime @default(now())
}

model Expert {
  id          Int       @id @default(autoincrement())
  name        String
  affiliation String?
  expertise   String?
  email       String?
  phone       String?
  notes       String?
  filePath    String?
  fileName    String?
  fileSize    String?
  createdAt   DateTime  @default(now())
  projects    Project[] @relation("ExpertToProject")
}

model Material {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  fileType    String?
  filePath    String
  fileName    String
  fileSize    String?
  tags        String[]
  createdAt   DateTime  @default(now())
  projects    Project[] @relation("MaterialToProject")
}
